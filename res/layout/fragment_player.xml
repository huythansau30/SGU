<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/player_maininfo_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:background="@color/card_gray"
        android:visibility="invisible" >
        
        <TimePicker
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/player_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_gray"
        android:clickable="true"
        android:gravity="bottom"
        android:orientation="horizontal" >

    	<ImageButton
            android:id="@+id/showContentButton"
            style="@android:style/Holo.Light.ButtonBar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_action_expand" />
    
        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:maxHeight="11dip"
            android:minHeight="11dip" />

        <ImageButton
            android:id="@+id/playButton"
            style="@android:style/Holo.Light.ButtonBar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_action_playback_play" />

	</LinearLayout>
</LinearLayout>

